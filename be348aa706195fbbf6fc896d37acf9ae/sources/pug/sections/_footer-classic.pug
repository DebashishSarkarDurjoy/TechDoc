	.container
		.row.row-50.justify-content-sm-between
			.col-lg-8.order-lg-2.wow-outer.ps-xl-82
				.wow.slideInRight
					.row.row-35.justify-content-between
						.col-12
							p.sub-title-2.footer-title Subscribe & Stay Updated
							// RD Mailform
							form.rd-mailform.text-start.rd-form-inline(data-form-output="form-output-global", data-form-type='contact', method='post', action='bat/rd-mailform.php')
								.form-wrap
									label.form-label(for="subscribe-email") E-mail
									input#subscribe-email.form-input(type="email" name="email" data-constraints="@Email @Required")
									

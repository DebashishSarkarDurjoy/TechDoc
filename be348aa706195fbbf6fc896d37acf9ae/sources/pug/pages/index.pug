extends  ../_skeleton

//- Includes
include ../components/_ui-pagination
include ../components/_ui-box-icon
include ../components/_ui-team
include ../components/_ui-posts
include ../components/_ui-gallery-item
include ../components/_ui-event-item

block variables
	- var activeCategory = 'home'
	- var pageName = 'Home'

block page
	// Page Header
	include ../sections/_header-classic

	// Swiper
	section.section.section-main-bunner.context-dark#home
		.main-bunner-img(style='background-image: url("images/bg-bunner-1.jpg"); background-size: cover;')
		.main-bunner-inner
			.container
				.row
					.col-sm-10.col-md-7.col-xl-6
						h1 We Сan Fix Anything
						h4.text-opacity-80.fw-normal
							| TechDoc provides a wide variety of repair
							br.d-none.d-xl-block
							| services for your gadgets and various devices.

						a.button.button-primary(href='#contacts') Get in touch
	='\n'
	
	// Services
	include ../sections/_services
	='\n'
	
	// What Problems Can We Fix?
	section.section.section-xl.bg-gray-700.bg-decorate-light#repairs
		.container
			.row.row-35.justify-content-center.text-center
				.col-12.wow-outer
					.wow.slideInDown
						h2 What Problems Can We Fix?
				.col-lg-8.wow-outer
					.wow.fadeInUp
						p.sub-title.text-opacity-80.px-lg-4 From screen repair to battery replacement, our team of talented repair technicians can find a suitable solution for any device that our customers want us to fix.
			.row.g-0
				.col-md-6.col-lg-4
					+team-classic({
						img: 'team-classic-1-391x252',
						name: 'Water Damage',
						text: 'from $50'
					})
				.col-md-6.col-lg-4
				
					+team-classic({
						img: 'team-classic-2-391x252',
						name: 'Cracked Screen',
						text: 'from $30'
						})
				.col-md-6.col-lg-4
					+team-classic({
						img: 'team-classic-3-391x252',
						name: 'Non-working Speaker',
						text: 'from $35'
					})
				.col-md-6.col-lg-4
					+team-classic({
						img: 'team-classic-4-391x252',
						name: 'No Signal',
						text: 'from $20'
					})
				.col-md-6.col-lg-4
					+team-classic({
						img: 'team-classic-5-391x252',
						name: 'Broken Buttons',
						text: 'from $25'
					})
				.col-md-6.col-lg-4
					+team-classic({
						img: 'team-classic-6-391x252',
						name: 'Dead Battery',
						text: 'from $40'
					})
	='\n'
	
	// CTA
	+parallax({
		img: 'parallax-img-1.jpg',
		innerClass: 'section-xl-2 text-center'
	})
		.container: .row.justify-content-md-center: .col-md-10.wow-outer
			.wow.fadeInUp
				h2 Do You Need Help?
				p.sub-title We are always ready to help you with repair of any electronic device.
				a(href='#contacts').button.button-primary send request
	='\n'
	
	// Our Pricing
	section.section-lg.section.bg-gray-2#pricing
		.container
			.row.row-35.justify-content-center.text-center
				.col-12.wow-outer
					.wow.slideInDown
						h2 Our Pricing
				.col-lg-8.wow-outer
					.wow.fadeInUp
						p.sub-title.text-opacity-80.px-lg-5 Below you can learn more about different pricing options and devices we work with. Please note that repairs usually take more than one day and depend on your device.
			include ../includes/_repairs
	='\n'
	
	// Testimonials
	include ../sections/_testimonials
	='\n'
	
	// Latest News
	section.section.section-xl.bg-gray-2
		.container
			.row
				.col-12.text-center
					h2 Latest News
			.row.row-30
				.col-md-6.col-lg-4.wow-outer
					.wow.fadeInUp
						+post-modern({
							img: 'post-modern-1-370x255',
							date: 'May 11, 2019',
							title: '10 Reasons iPhone and iPad Screens Crack'
						})
				.col-md-6.col-lg-4.wow-outer
					.wow.slideInDown
						+post-modern({
							classMod: 'post-modern-reverse',
							img: 'post-modern-2-370x255',
							date: 'April 25, 2019',
							title: 'Why Your Tablet May Not Be Charging Properly'
						})
				.col-md-12.col-lg-4.wow-outer
					.wow.fadeInUp
						+post-modern-text({
							classMod: 'post-modern-text',
							date: 'July 02, 2019',
							title: '20 Useful Tips on Keeping Your PC Safe'
						})
							p Computers are created to increase productivity – personal or business use. Automation is possible through the use of computers and the internet which make everyday operations and transactions more efficient and more accurate. However, there are threats to the...
	='\n'
	
	// Officially Authorized Repair Center
	section.section.section-lg.bg-default.text-center
		.container
			.wow-outer
				.wow.slideInDown
					h2 Officially Authorized Repair Center
					p.sub-title-2 brands we Work With
			.row.row-30.mt-45
				.col-sm-6.col-lg-3
					a(href='#').box-sponsor.wow.fadeInUp
						+png('logo-1-136x20')
				.col-sm-6.col-lg-3
					a(href='#' data-wow-delay='0.3s').box-sponsor.wow.fadeInUp
						+png('logo-2-111x38')
				.col-sm-6.col-lg-3
					a(href='#' data-wow-delay='0.6s').box-sponsor.wow.fadeInUp
						+png('logo-3-94x36')
				.col-sm-6.col-lg-3
					a(href='#' data-wow-delay='0.9s').box-sponsor.wow.fadeInUp
						+png('logo-4-156x35')
			.wow-outer.mt-50
				.wow.fadeInUp
					a(href='#contacts').button.button-xl.button-primary Get in touch
	='\n'
	
	// Maps
	section.section
		.google-map-container(
			data-zoom='5'
			data-icon='images/gmap_marker.png'
			data-icon-active='images/gmap_marker.png'
			data-center='9870 St Vincent Place, Glasgow, DC 45 Fr 45.'
			data-styles='[{"featureType":"water","stylers":[{"saturation":43},{"lightness":-11},{"hue":"#0088ff"}]},{"featureType":"road","elementType":"geometry.fill","stylers":[{"hue":"#ff0000"},{"saturation":-100},{"lightness":99}]},{"featureType":"road","elementType":"geometry.stroke","stylers":[{"color":"#808080"},{"lightness":54}]},{"featureType":"landscape.man_made","elementType":"geometry.fill","stylers":[{"color":"#ece2d9"}]},{"featureType":"poi.park","elementType":"geometry.fill","stylers":[{"color":"#ccdca1"}]},{"featureType":"road","elementType":"labels.text.fill","stylers":[{"color":"#767676"}]},{"featureType":"road","elementType":"labels.text.stroke","stylers":[{"color":"#ffffff"}]},{"featureType":"poi","stylers":[{"visibility":"off"}]},{"featureType":"landscape.natural","elementType":"geometry.fill","stylers":[{"visibility":"on"},{"color":"#b8cb93"}]},{"featureType":"poi.park","stylers":[{"visibility":"on"}]},{"featureType":"poi.sports_complex","stylers":[{"visibility":"on"}]},{"featureType":"poi.medical","stylers":[{"visibility":"on"}]},{"featureType":"poi.business","stylers":[{"visibility":"simplified"}]}]'
			
		)
			.google-map
			ul.google-map-markers
				li(
					data-location='9870 St Vincent Place, Glasgow, DC 45 Fr 45.'
					data-description='9870 St Vincent Place, Glasgow, DC 45 Fr 45.'
				)
	='\n'

	section.section.section-lg.text-center.bg-default
		.container
			.row.row-50.justify-content-center
				.col-md-6.col-lg-4
					+box-icon-classic({
						boxMod: 'box-icon-classic-contacts',
						classMod: 'decorate-triangle',
						icon: 'linearicons-phone-incoming icon-lg',
						link: 'tel:#',
						title: '1-800-123-1234'
					})
						p You can call us anytime
				.col-md-6.col-lg-4
					+box-icon-classic({
						boxMod: 'box-icon-classic-contacts',
						classMod: 'decorate-circle',
						icon: 'linearicons-map2 icon-lg',
						title: '51 Francis Street, Darlinghurst NSW 2010, United States'
					})

				.col-md-6.col-lg-4
					+box-icon-classic({
						boxMod: 'box-icon-classic-contacts',
						classMod: 'decorate-rectangle',
						icon: 'linearicons-paper-plane icon-lg',
						link: 'mailto:#',
						title: 'info@demolink.org'
					})
						p Feel free to email us your questions
	='\n'

	// Contact us
	include ../includes/_section-contact-form

	// Page Footer
	include ../sections/_footer-classic
